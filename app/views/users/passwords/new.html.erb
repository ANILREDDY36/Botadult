<div class="account-wrapper forgot-pwd gray_bg">
  <div class="container">
    <div class="white_bg">
    	<h2 class="text-center main-ttl">Forgot password?</h2>
    	<div class="account-wall">
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					<%= devise_error_messages! %>

					<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control" %>
          	<span class="clearfix"></span>
					<div class="actions">
	          <%= f.submit "Reset", class: "button sign-btn" %>
	        </div>
          <a href="#" class="join-yet">Didn't recieve a confirmation?</a>
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
				<% end %>
    	</div>
    </div>
  </div>
</div>